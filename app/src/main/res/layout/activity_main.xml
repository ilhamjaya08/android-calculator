<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="#EEEEEE"
        android:gravity="end|bottom"
        android:padding="16dp"
        android:textSize="48sp"
        android:text="0"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.3" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="8dp"
        app:columnCount="4"
        app:rowCount="5"
        app:layout_constraintTop_toBottomOf="@id/display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="C"
            android:textSize="24sp"
            android:backgroundTint="#FF6B6B"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnParentheses"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="( )"
            android:textSize="24sp"
            android:backgroundTint="#4ECDC4"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="%"
            android:textSize="24sp"
            android:backgroundTint="#45B7D1"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="รท"
            android:textSize="24sp"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            android:backgroundTint="#6C5CE7"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="7"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="8"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="9"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="ร"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#6C5CE7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="4"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="5"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="6"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="-"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#6C5CE7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="1"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="2"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="3"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#6C5CE7"
            android:text="+"
            android:textSize="24sp"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="0"
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#A5A5A5"
            app:layout_columnWeight="2"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="."
            android:textSize="24sp"
            android:layout_margin="4dp"
            android:backgroundTint="#FE9434"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:backgroundTint="#FF9A8B"
            android:text="="
            android:textSize="24sp"
            android:layout_margin="4dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="3"
            app:layout_row="4" />
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>